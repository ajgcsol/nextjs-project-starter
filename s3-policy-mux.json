{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowMuxIngestAndPublicVideoReads",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::law-school-repository-content/videos/*"
    },
    {
      "Sid": "AllowCloudFrontPrivateReads",
      "Effect": "Allow",
      "Principal": {
        "Service": "cloudfront.amazonaws.com"
      },
      "Action": "s3:GetObject",
      "Resource": [
        "arn:aws:s3:::law-school-repository-content/videos/*",
        "arn:aws:s3:::law-school-repository-content/thumbnails/*"
      ],
      "Condition": {
        "StringEquals": {
          "AWS:SourceArn": "arn:aws:cloudfront::792298120704:distribution/E8B0JB1BMJWPX"
        }
      }
    },
    {
      "Sid": "DenyInsecureConnections",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::law-school-repository-content",
        "arn:aws:s3:::law-school-repository-content/*"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    }
  ]
}
