# AI Service Configuration
# OpenRouter API Key for LLM features (recommended)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Alternative AI Service Keys (choose one)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local AI Configuration (for Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:latest

# Database Configuration
DATABASE_URL=sqlite:./repository.db

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Law School Repository

# Video Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=500MB

# WebSocket Configuration (for real-time collaboration)
WEBSOCKET_PORT=8001

# Email Configuration (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_VIDEO_UPLOAD=true
ENABLE_REAL_TIME_EDITING=true
